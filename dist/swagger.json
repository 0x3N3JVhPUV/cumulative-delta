{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Cumulative Delta Calculator API",
    "description": "API for calculating the cumulative delta of a specific trading pair on a specific exchange",
    "termsOfService": "",
    "contact": {
      "name": "API Support",
      "url": "",
      "email": ""
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/exchange",
      "description": "Local server"
    }
  ],
  "tags": [
    {
      "name": "exchange",
      "description": "Exchange operations"
    }
  ],
  "paths": {
    "/{exchange}/symbols": {
      "get": {
        "tags": ["exchange"],
        "summary": "Get a list of symbols available on the specified exchange",
        "operationId": "getSymbols",
        "parameters": [
          {
            "name": "exchange",
            "in": "path",
            "description": "Name of the exchange",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/{exchange}/trade-history/{symbol}": {
      "get": {
        "tags": ["exchange"],
        "summary": "Get the trade history for the specified symbol on the specified exchange",
        "operationId": "getTradeHistory",
        "parameters": [
          {
            "name": "exchange",
            "in": "path",
            "description": "Name of the exchange",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "symbol",
            "in": "path",
            "description": "Trading pair symbol",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "timestamp": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "price": {
                        "type": "number",
                        "format": "double"
                      },
                      "quantity": {
                        "type": "number",
                        "format": "double"
                      },
                      "isBuyerMaker": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/{exchange}/cumulative-delta/{symbol}": {
      "get": {
        "tags": ["exchange"],
        "summary": "Calculate the cumulative delta for the specified symbol on the specified exchange",
        "operationId": "getCumulativeDelta",
        "parameters": [
          {
            "name": "exchange",
            "in": "path",
            "description": "Name of the exchange",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "symbol",
            "in": "path",
            "description": "Trading pair symbol",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "cumulativeDelta": {
                      "type": "number",
                      "format": "double"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {},
    "securitySchemes": {}
  }
}
